RewriteEngine On
RewriteBase /

# Allow direct access to assets and api directories
RewriteRule ^(assets|api)/ - [L]

# Handle files and directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Routes for pages
RewriteRule ^login$ pages/login.php [L]
RewriteRule ^register$ pages/register.php [L]
RewriteRule ^profile$ pages/profile.php [L]
RewriteRule ^logout$ pages/logout.php [L]
RewriteRule ^chat/([0-9]+)$ pages/dashboard.php?chat_id=$1 [L]
RewriteRule ^chat$ pages/dashboard.php [L]
RewriteRule ^$ pages/dashboard.php [L]

# Security headers
<IfModule mod_headers.c>
    # Protect against XSS attacks
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME-type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Clickjacking protection
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Enforce HTTPS
    # Uncomment the following line when HTTPS is configured
    # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Disable directory listing
Options -Indexes

# PHP settings
<IfModule mod_php8.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log logs/php_errors.log
    
    # Maximum upload file size
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    
    # Session security
    php_flag session.use_only_cookies On
    php_flag session.use_strict_mode On
    php_flag session.cookie_httponly On
    
    # Uncomment when HTTPS is configured
    # php_flag session.cookie_secure On
</IfModule> 